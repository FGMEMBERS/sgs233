<PropertyList>

 <sim>

  <description>Schweizer 2-33</description>
 
  <flight-model>jsb</flight-model>
  <aero>sgs233</aero>

  <startup>
   <units>feet</units>
  </startup>

  <presets>
   <onground>false</onground>
   <speed-set>knots</speed-set>
   <airport-id type="string">KSFO</airport-id>
   <runway type="string">28R</runway>
   <airspeed-kt type="double">60.0</airspeed-kt>
   <altitude-ft type="double">3000.0</altitude-ft>
  </presets>
  
  <sound>
   <path>Aircraft/sgs233/glider-sound.xml</path>
  </sound>

  <panel>
   <path>Aircraft/sgs233/Panels/glider-panel.xml</path>
   <visibility archive="y">true</visibility>
   <x-offset>256</x-offset>
  </panel>

  <systems>
   <electrical>
    <path>Aircraft/sgs233/null-electrical.xml</path>
    <servicable archive="y">false</servicable>
   </electrical>
  </systems>

  <model>
    <path>Aircraft/sgs233/Models/sgs233.ac</path>
  </model>

  <ai>
   <scenario>thermal_demo</scenario>
  </ai>

</sim>

<controls>
  <elevator-trim>0.00367</elevator-trim>
</controls>

<environment>
 <clouds>
  <status>false</status>
 </clouds>
</environment>

<!-- This binds the joystick's throttle slider to the spoilers.
     It works for the Logitech Wingman Extreme Digital 3D joystick.
     To make make it work with your joystick you need to change the
     "js-named" tag, and possibly the "axis" tag.  -->
<input>
 <joysticks>
  <js-named n="1002">
   <axis n="3">
    <binding>
     <command>property-scale</command>
     <property>/controls/flight/spoilers</property>
     <offset type="double">-1.0</offset>
     <factor type="double">-0.5</factor>
    </binding>
   </axis>
  </js-named>
 </joysticks>
</input>

</PropertyList>
